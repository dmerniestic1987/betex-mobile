<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NavigationBarImage">
        <item name="android:layout_width">@dimen/navigation_bar_image_width</item>
        <item name="android:layout_height">@dimen/navigation_bar_image_height</item>
        <item name="contentDescription">@string/nav_header_desc</item>
        <item name="android:paddingTop">@dimen/nav_header_vertical_spacing</item>
    </style>

    <style name="AppTheme.ButtonBar">
        <item name="android:layout_margin">@dimen/button_bar_margin</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="BetexMaterialButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/material_button_padding_16_dp</item>
        <item name="android:paddingTop">@dimen/card_padding_vertical</item>
        <item name="android:paddingEnd">@dimen/material_button_padding_16_dp</item>
        <item name="android:paddingBottom">@dimen/card_padding_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="android:textColor">@color/darkTextColor</item>
    </style>

    <style name="AppTheme.ButttonBar.Button" parent="AppTheme.ButtonBar">
        <item name="android:padding">@dimen/button_bar_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@drawable/button_yellow_background</item>
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


    <style name="ButtonShowMore">
        <item name="android:background">@drawable/button_yellow_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/button_bar_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:stateListAnimator">@null</item>
    </style>



    <style name="ButtonPlaceBet" parent="ButtonShowMore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawableTop">@drawable/ic_betex</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:elevation">@dimen/button_elevation</item>
    </style>

    <style name="PlaceBetInfoText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="PlaceBetSeekBar">
        <item name="android:thumbTint">@color/colorSecondary</item>
        <item name="android:max">100</item>
        <item name="android:thumb">@drawable/ic_betex</item>
        <item name="android:progress">0</item>
        <item name="android:progressBackgroundTint">@color/primaryText</item>
        <item name="android:progressTint">@color/colorSecondary</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="AppTheme.BottomNavigationView" parent="AppTheme">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="AppTheme.Content" parent="AppTheme">
        <item name="android:background">#000000</item>
    </style>

    <style name="BetexBetButton">
        <item name="android:background">@drawable/button_yellow_background</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="BetexBetButton.BetButton" parent="BetexBetButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">@dimen/bet_button_top_margin</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:drawableTop">@drawable/ic_coin</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ItemCurrency">
        <item name="android:background">@drawable/background_item</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/wallet_margin_fragments</item>
        <item name="android:layout_marginBottom">@dimen/wallet_margin_fragments</item>
    </style>

    <style name="ItemMyBets" parent="ItemCurrency">
        <item name="android:padding">@dimen/margin_place_bet_8dp</item>
        <item name="android:layout_marginLeft">@dimen/wallet_margin_fragments</item>
        <item name="android:layout_marginRight">@dimen/wallet_margin_fragments</item>
    </style>

    <style name="ItemMyBetsTextOdds">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="ItemMyBetsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/material_text_body2</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ItemMyBetTitle" parent="ItemMyBetsText">
        <item name="android:textSize">@dimen/material_text_subhead</item>
    </style>

    <style name="ItemMyBetSubHead" parent="ItemMyBetsText">
        <item name="android:textSize">@dimen/material_text_body1</item>
    </style>

    <style name="ItemMyBetStakeText" parent="ItemMyBetsText">
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="ItemMyBetStakeValue" parent="ItemMyBetsText">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemCurrency.ImageView">
        <item name="android:layout_width">@dimen/item_currency_list_width</item>
        <item name="android:layout_height">@dimen/item_currency_list_height</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ItemEventMarket">

    </style>

    <style name="ItemEventMarket.ImageView">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">@dimen/item_market_event_image_height</item>
        <item name="android:layout_width">@dimen/item_market_event_image_width</item>
    </style>

    <style name="ItemEventMarket.MainData">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="ItemEventMarket.SubData" parent="ItemEventMarket.MainData">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>
    <style name="FabLabel">
        <item name="android:background">@color/background_item_endColor</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/material_text_subhead</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CarViewItem">
        <item name="android:layout_marginBottom">@dimen/card_margin_vertical_big_activity</item>
        <item name="android:layout_marginEnd">@dimen/card_margin_horizontal_big_activity</item>
        <item name="android:layout_marginStart">@dimen/card_margin_horizontal_big_activity</item>
        <item name="android:layout_marginTop">@dimen/card_margin_vertical_big_activity</item>
        <item name="android:paddingBottom">@dimen/card_padding_vertical</item>
        <item name="android:paddingTop">@dimen/card_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/card_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/card_padding_horizontal</item>
    </style>
</resources>


