<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorContentPrimary"
    android:layout_margin="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/localRunnerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="Local"
            android:textStyle="bold"
            android:textColor="@color/colorSecondary"
            android:gravity="center"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/competitionName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="Supercopa 2019"
            android:textStyle="bold"
            android:textColor="@color/colorSecondary"
            android:gravity="center"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/visitorRunnerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="Visitante"
            android:textColor="@color/colorSecondary"
            android:gravity="center"
            android:textAlignment="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgLocalCompetitor"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:srcCompat="@mipmap/boca_juniors" />

        <TextView
            android:id="@+id/versus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="V.S"
            android:textColor="@color/colorSecondary"
            android:textAlignment="center"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imgVisitorCompetitor"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:srcCompat="@mipmap/river_plate" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/localCompetitorName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Boca Jrs"
            android:textColor="@color/iconTextColor"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/drawName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Empate"
            android:textStyle="bold"
            android:textColor="@color/iconTextColor"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/visitorCompetitorName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="River Plate"
            android:textStyle="bold"
            android:textColor="@color/iconTextColor"
            android:textAlignment="center"/>
    </LinearLayout>

     <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorSecondary"
        android:text="Ver mÃ¡s" />
</LinearLayout>
