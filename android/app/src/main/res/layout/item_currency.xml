<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/ItemCurrency">

    <ImageView
        android:id="@+id/currencyImg"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:srcCompat="@drawable/eth"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/currencyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_place_bet_8dp"
            android:layout_marginLeft="@dimen/margin_place_bet_8dp"
            android:layout_marginRight="@dimen/margin_place_bet_8dp"
            android:text="Ether"
            android:gravity="left"
            android:textSize="16sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/currencyInUsd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="@dimen/margin_place_bet_8dp"
            android:layout_marginRight="@dimen/margin_place_bet_8dp"
            android:layout_marginBottom="@dimen/margin_place_bet_8dp"
            android:text="$30510.40"
            android:textSize="12sp"
            android:gravity="left"
            android:textColor="@color/white" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_place_bet_8dp"
            android:layout_marginLeft="@dimen/margin_place_bet_8dp"
            android:layout_marginRight="@dimen/margin_place_bet_8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/currencyValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="104.56" />

            <TextView
                android:id="@+id/currencySymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="ETH"
                android:layout_marginLeft="@dimen/margin_place_bet_8dp"
                android:textColor="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/currencyBalanceInUsd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="@dimen/margin_place_bet_8dp"
            android:layout_marginRight="@dimen/margin_place_bet_8dp"
            android:layout_marginBottom="@dimen/margin_place_bet_8dp"
            android:text="$30510.40"
            android:textSize="12sp"
            android:gravity="left"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
