<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/ItemMyBets"
    android:elevation="@dimen/card_elevation">

    <!--EVENT VALUES -->
    <LinearLayout
        android:id="@+id/linearEventValues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/eventDateValue"
                android:text="23/05"
                style="@style/ItemMyBetsText"
                android:textStyle="bold"
                android:textColor="@color/colorSecondary"/>

            <TextView
                android:id="@+id/eventHoutValue"
                android:text="19:30"
                style="@style/ItemMyBetsText"
                android:textStyle="bold"
                android:textColor="@color/colorSecondary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/eventMarketValue"
                android:text="Mancester city - Manchester United"
                style="@style/ItemMyBetsText" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/marketTypeValue"
                    android:text="MÃ¡s de 2.5 goles"
                    style="@style/ItemMyBetsText"/>

                <TextView
                    android:text=" - "
                    android:textColor="@color/white"
                    style="@style/ItemMyBetsText"/>

                <TextView
                    android:id="@+id/betType"
                    android:text="A favor"
                    style="@style/ItemMyBetsText"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/eventTypeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_boxing"
                android:tint="@color/colorSecondary"
                />

            <TextView
                android:id="@+id/status"
                android:text="En Juego"
                style="@style/ItemMyBetsText"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/colorSecondary"
                android:textAlignment="center"/>
        </LinearLayout>



    </LinearLayout>

    <!--STAKE VALUES -->
    <LinearLayout
        android:id="@+id/linearStake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">


            <TextView
                android:id="@+id/stakeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arriesgado: "
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/stakeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/stakeSymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ETH"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/oddTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuota:"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@color/colorPrimary">
                <TextView
                    android:id="@+id/oddValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.54"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
