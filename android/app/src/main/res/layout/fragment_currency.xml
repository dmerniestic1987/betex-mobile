<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CurrencyFragment"
    android:orientation="vertical"
    android:theme="@style/AppTheme.Content"
    android:padding="@dimen/margin_place_bet_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorContentPrimary">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorContentPrimary"
            android:src="@mipmap/eth"
            android:layout_margin="@dimen/margin_place_bet_10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_place_bet_10dp"
            android:background="@color/colorContentPrimary">

            <Button
                android:id="@+id/sendButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/send_text"
                style="@style/AppTheme.ButttonBar.Button"
                android:background="@color/colorSecondary"
                android:textColor="@color/colorContentPrimary"
                android:padding="@dimen/margin_place_bet_8dp"
                android:drawableTop="@drawable/ic_wallet_send"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <Button
                android:id="@+id/receiveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/AppTheme.ButttonBar.Button"
                android:text="@string/receive_text"
                android:background="@color/colorSecondary"
                android:padding="@dimen/margin_place_bet_8dp"
                android:textColor="@color/colorContentPrimary"
                android:drawableTop="@drawable/ic_wallet_receive"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>