<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ar.com.betex.betexmobile">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:betexName=".activities.RulesActivity"
            android:label="@string/title_activity_rules"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:betexName=".activities.HelpMarketActivity"
            android:label="@string/title_activity_help"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:betexName=".activities.WellcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:betexName="android.intent.action.MAIN" />

                <category android:betexName="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:betexName=".activities.ChallengeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:betexName=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>